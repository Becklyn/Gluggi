<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>{% block title %}{{ gluggi.config.title }}{% endblock %}</title>

        <link rel="stylesheet" href="{{ coreAsset("/css/preview.css") }}">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset("/css/app.css") }}">
        {% endblock %}

        {% block javascripts %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
        {% endblock %}
    </head>
    <body class="{{ bodyClass|default("") }}">
        {% block body %}{% endblock %}
    </body>
</html>
